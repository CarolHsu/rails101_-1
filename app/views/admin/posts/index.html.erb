<h1>Listing Post</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= board.title %></td>
      <td><%= link_to("Show", post_path(post)) %></td>
      <td><%= link_to("Edit", edit_post_path(post)) %></td>
      <td><%= link_to("Destroy", post_path(post),:confirm => "Are you sure?", :method => :delete) %></td>
    </tr>
  <% end %>
</table>

